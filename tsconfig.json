{
  "compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"types": ["node", "bun-types"],
  }
}
