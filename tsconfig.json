{
  "compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"downlevelIteration": true,
  },
	"exclude": ["**/node_modules/", "**/tests/"],
}
