{
  "include": ["src", "types"],
  "exclude": ["/node_modules/", "./src/**/*.spec.ts", "./data/**/*"],
  "compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"downlevelIteration": true,
		"outDir": "dist",
		"rootDir": "src",
  },
}
